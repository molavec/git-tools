#!/bin/bash
# Crea una arhivo .gitignore que lista archivos típicos
# que deben ser ignorados por git.
# @author molavec
# @website www.molavec.com


#Custom
echo "#Añade aquí archivos que desees ignorar" >> .gitignore &&\

#NODE
echo "Añade carpeta dependencias node..."  &&\
echo "#Dependencias node https://docs.npmjs.com/cli/shrinkwrap#caveats" >> .gitignore &&\
echo "node_modules" >> .gitignore &&\

#PYTHON
echo "Añade archivos python..."  &&\
echo "" >> .gitignore &&\
echo "#Archivos python" >> .gitignore
echo "venv" >> .gitignore

#MAC
echo "Añade archivos basura mac..."  &&\
echo "" >> .gitignore &&\
echo "#Archivos basura mac" >> .gitignore
echo ".DS_Store" >> .gitignore

#GROW
#Grow files
echo "Añade archivos grow..."  &&\
echo "" >> .gitignore &&\
echo "#Archivos grow" >> .gitignore
echo ".grow" >> .gitignore

#ARCHIVOS LOG
echo "Añade carpeta y archivos de Logs..."  &&\
echo "" >> .gitignore &&\
echo "#Logs" >> .gitignore &&\
echo "logs" >> .gitignore &&\
echo "*.log" >> .gitignore &&\

#ARCHIVOS RELEASE
echo "Añade archivos compilados o distribución..."  &&\
echo "" >> .gitignore &&\
echo "#Compiled binary addons (http://nodejs.org/api/addons.html)" >> .gitignore &&\
echo "build" >> .gitignore &&\
echo "dist" >> .gitignore &&\
echo "release" >> .gitignore &&\

#ARCHIVOS NPM
echo "Añade archivos npm..."  &&\
echo "" >> .gitignore &&\
echo "#Debug log from npm" >> .gitignore &&\
echo "npm-debug.log" >> .gitignore &&\

#ARCHIVOS GRUNT
echo "Añade archivos grunt..."  &&\
echo "" >> .gitignore &&\
echo "#Grunt intermediate storage (http://gruntjs.com/creating-plugins#storing-task-files)" >> .gitignore &&\
echo ".grunt" >> .gitignore &&\

#ARCHIVOS PROCESOS
echo "Añade archivos runtime aplicación..."  &&\
echo "" >> .gitignore &&\
echo "#Runtime data" >> .gitignore &&\
echo "pids" >> .gitignore &&\
echo "*.pid" >> .gitignore &&\
echo "*.seed" >> .gitignore &&\

#ARCHIVOS COVERAGE
echo "Añade archivos coverage lib-cov..."  &&\
echo "" >> .gitignore &&\
echo "#Directory for instrumented libs generated by jscoverage/JSCover" >> .gitignore &&\
echo "lib-cov" >> .gitignore &&\

echo "Añade archivos coverage istambul..."  &&\
echo "" >> .gitignore &&\
echo "#Coverage directory used by tools like istanbul" >> .gitignore &&\
echo "coverage" >> .gitignore &&\

echo "Añade archivos node-waf..."  &&\
echo "" >> .gitignore &&\
echo "#node-waf configuration" >> .gitignore &&\
echo ".lock-wscript" >> .gitignore


#ARCHIVOS HEROKU
echo "Añade archivos heroku..."  &&\
echo "" >> .gitignore &&\
echo "#archivos heroku" >> .gitignore &&\
echo "*.env" >> .gitignore &&\
echo "*.dev" >> .gitignore